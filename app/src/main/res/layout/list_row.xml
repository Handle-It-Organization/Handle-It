<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal" android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:padding="5dp">


<LinearLayout
    android:id="@+id/thumbnail"
    android:padding="3dp"
    android:layout_alignParentLeft="true"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/EventImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_perm_media"/>


</LinearLayout>


<TextView
    android:id="@+id/video_title_txt"
    android:fontFamily="sans-serif-thin"
    android:layout_alignTop="@+id/thumbnail"
    android:text="@string/no_video_description"
    android:textSize="16sp"
    android:textStyle="bold"
    android:layout_toEndOf="@+id/thumbnail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#000000" />

<TextView
    android:id="@+id/date_time_text"
    android:fontFamily="sans-serif-thin"
    android:textSize="16sp"
    android:layout_toEndOf="@+id/thumbnail"
    android:layout_below="@+id/video_title_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="No Known Date/Time"
    android:textColor="#000000" />

<TextView
    android:id="@+id/answer_complete_txt"
    android:fontFamily="sans-serif-thin"
    android:textStyle="italic"
    android:text="@string/answer_complete"
    android:layout_below="@+id/date_time_text"
    android:layout_toEndOf="@+id/thumbnail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#000000" />

<ImageView
    android:id="@+id/more_info"
    android:src="@drawable/ic_navigate_next_black"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:contentDescription="@string/video_photo" />
</RelativeLayout>