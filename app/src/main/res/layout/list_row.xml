    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/video_title_txt"
            android:fontFamily="sans-serif-thin"
            android:layout_alignTop="@+id/thumbnail"
            android:text="@string/no_video_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/help_item_image"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_perm_media"/>


            <LinearLayout
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/category"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category: "
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/category_name"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: "
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/date_txt"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02/12/2016 "
                        android:textColor="#000000"/>
 <!--  Not going to put time in yet. Maybe implement later
                    <TextView
                        android:id="@+id/time"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: "
                        android:textColor="#000000"
                        android:paddingLeft="2dp"/>
                    <TextView
                        android:id="@+id/time_txt"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000" />
-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/answer_complete"
                        android:fontFamily="sans-serif-thin"
                        android:textStyle="italic"
                        android:text="@string/answer_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/answer_complete_txt"
                        android:fontFamily="sans-serif-thin"
                        android:textStyle="italic"
                        android:text=" No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:layout_weight="1"
                android:id="@+id/more_info"
                android:src="@drawable/ic_navigate_next_black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="5dp"
                android:layout_height="30dp"
                android:contentDescription="@string/video_photo" />
        </LinearLayout>

    </LinearLayout>






</LinearLayout>